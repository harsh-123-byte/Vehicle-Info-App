<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/updatebkg"
    android:gravity="center_vertical"
    android:orientation="vertical"
    tools:context=".UpdateActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="300dp"
        android:layout_gravity="center_horizontal"
        android:padding="20dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/referenceVehicleNumber"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:hint="Enter Vehicle Number"
            android:background="@drawable/green_border"
            android:gravity="start|center_vertical"
            android:padding="16dp"
            android:textColor="@color/green" />

        <EditText
            android:id="@+id/UpdateownerName"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:hint="Enter Owner Name"
            android:background="@drawable/green_border"
            android:gravity="start|center_vertical"
            android:padding="16dp"
            android:textColor="@color/green"
            />

        <EditText
            android:id="@+id/UpdateVehivleBrandName"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:hint="Enter Vehicle Brand"
            android:background="@drawable/green_border"
            android:gravity="start|center_vertical"
            android:padding="16dp"
            android:textColor="@color/green" />

        <EditText
            android:id="@+id/UpdateVehicleRTO"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:hint="Enter Vehicle RTO"
            android:background="@drawable/green_border"
            android:gravity="start|center_vertical"
            android:padding="16dp"
            android:textColor="@color/green" />



        <Button
            android:id="@+id/Updatebutton"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:backgroundTint="@color/green"
            android:textSize="18sp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:text="Update" />

    </LinearLayout>

</LinearLayout>